<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title><%= (title ? title + ' Â· ' : '') %>Admin</title>

<style>
  :root{
    --bg: #f6f8fc;
    --panel: #ffffff;
    --text: #0f172a;
    --muted: #667085;
    --line: rgba(15, 23, 42, 0.10);

    --brand: #2563eb;
    --brand-soft: rgba(37, 99, 235, 0.10);

    --ok: #16a34a;
    --ok-soft: rgba(22, 163, 74, 0.10);
    --err: #dc2626;
    --err-soft: rgba(220, 38, 38, 0.10);
    --warn: #d97706;
    --warn-soft: rgba(217, 119, 6, 0.10);

    --radius: 16px;
    --shadow: 0 10px 30px rgba(2, 6, 23, 0.08);
    --shadow2: 0 2px 10px rgba(2, 6, 23, 0.06);
  }

  *{ box-sizing:border-box; }
  html,body{ height:100%; }
  body{
    margin:0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
    color: var(--text);
    background:
      radial-gradient(900px 520px at 25% -10%, rgba(37,99,235,.14), transparent 60%),
      radial-gradient(900px 520px at 80% 0%, rgba(16,185,129,.10), transparent 55%),
      var(--bg);
  }

  a{ color:inherit; text-decoration:none; }
  .container{ max-width: 1100px; margin: 0 auto; padding: 18px; }

  /* Header */
  .admin-header{
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(246,248,252,.80);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--line);
  }
  .admin-header-inner{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:14px;
    padding: 14px 18px;
  }

  .brand{
    display:flex;
    align-items:center;
    gap:10px;
    min-width: 0;
  }
  .brand-badge{
    width: 36px;
    height: 36px;
    border-radius: 12px;
    background: conic-gradient(from 210deg, #2563eb, #60a5fa, #22c55e, #2563eb);
    box-shadow: var(--shadow2);
  }
  .brand-title{
    display:flex;
    flex-direction:column;
    min-width:0;
  }
  .brand-title b{ font-size: 14px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }
  .brand-title span{ font-size: 12px; color: var(--muted); white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }

  .nav{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
    align-items:center;
    justify-content:flex-end;
  }
  .pill{
    padding: 8px 11px;
    border-radius: 999px;
    border: 1px solid var(--line);
    background: #fff;
    color: var(--text);
    font-size: 13px;
    display:inline-flex;
    align-items:center;
    gap:8px;
    box-shadow: var(--shadow2);
    transition: transform .08s ease, box-shadow .15s ease, border-color .15s ease;
  }
  .pill:hover{ transform: translateY(-1px); box-shadow: var(--shadow); }
  .pill.active{
    border-color: rgba(37,99,235,.35);
    background: var(--brand-soft);
    color: #0b3aa7;
  }

  .right{ display:flex; gap:10px; align-items:center; }
  .userchip{
    border: 1px solid var(--line);
    background: #fff;
    border-radius: 999px;
    padding: 8px 11px;
    font-size: 13px;
    color: var(--muted);
    max-width: 320px;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    box-shadow: var(--shadow2);
  }

  /* Page */
  .page{ padding: 18px 0 28px 0; }
  .hero{
    margin: 12px 0 16px 0;
    display:flex;
    align-items:flex-end;
    justify-content:space-between;
    gap:16px;
  }
  .hero h1{ margin:0; font-size: 20px; letter-spacing:.2px; }
  .hero p{ margin:6px 0 0 0; color: var(--muted); font-size: 13px; max-width: 72ch; }

  /* Cards */
  .card{
    background: var(--panel);
    border: 1px solid var(--line);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 16px;
  }
  .card + .card{ margin-top: 14px; }

  label{ font-size: 12px; color: var(--muted); display:block; margin-bottom: 6px; }
  input, select, textarea{
    width:100%;
    border: 1px solid rgba(15, 23, 42, 0.14);
    background: #fff;
    color: var(--text);
    border-radius: 12px;
    padding: 10px 12px;
    outline:none;
    font-size: 14px;
    box-shadow: inset 0 1px 0 rgba(2,6,23,.04);
  }
  textarea{ min-height: 120px; resize: vertical; }

  .row{ display:grid; grid-template-columns: 1fr 1fr; gap:12px; }
  @media (max-width: 900px){ .row{ grid-template-columns: 1fr; } }

  .btn{
    border: 1px solid rgba(15,23,42,0.14);
    background: #fff;
    color: var(--text);
    border-radius: 12px;
    padding: 10px 12px;
    cursor:pointer;
    font-weight: 700;
    font-size: 13px;
    display:inline-flex;
    align-items:center;
    gap:8px;
    box-shadow: var(--shadow2);
  }
  .btn:hover{ box-shadow: var(--shadow); transform: translateY(-1px); }
  .btn.primary{
    border-color: rgba(37,99,235,.30);
    background: rgba(37,99,235,.10);
    color: #0b3aa7;
  }
  .btn.danger{
    border-color: rgba(220,38,38,.30);
    background: rgba(220,38,38,.08);
    color: #7f1d1d;
  }

  .help{ color: var(--muted); font-size: 12px; margin-top: 8px; line-height: 1.45; }
  .kbd{
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    padding: 2px 7px;
    border-radius: 999px;
    border: 1px solid var(--line);
    background: #fff;
    color: var(--muted);
    font-size: 11px;
    box-shadow: var(--shadow2);
  }

  .toast{
    margin-top: 10px;
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid var(--line);
    background: #fff;
    color: var(--text);
    font-size: 13px;
    box-shadow: var(--shadow2);
  }
  .toast.ok{ border-color: rgba(22,163,74,.25); background: var(--ok-soft); }
  .toast.err{ border-color: rgba(220,38,38,.25); background: var(--err-soft); }

  /* Footer */
  .admin-footer{
    border-top: 1px solid var(--line);
    margin-top: 22px;
    padding: 14px 0 6px 0;
    color: var(--muted);
    font-size: 12px;
  }
  .admin-footer-inner{
    display:flex;
    justify-content:space-between;
    gap:10px;
    flex-wrap:wrap;
    align-items:center;
  }

  /* Tables (nice defaults) */
  table{ width:100%; border-collapse: collapse; }
  th, td{ padding: 10px; border-bottom: 1px solid var(--line); font-size: 13px; }
  th{ color: var(--muted); font-weight: 700; text-align:left; background: rgba(2,6,23,.02); }
</style>
